@model IEnumerable<Product2.Controllers.Product2.Controllers.Product>
<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <style>
        table {
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 5px;
        }
    </style>
</head>
<body>
    <h2>Product List</h2>
    <table>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a href="@Url.Action("EditProduct", new { id = product.Id })">Edit</a>
                    <a href="@Url.Action("DeleteProduct", new { id = product.Id })">Delete</a>
                </td>
            </tr>
        }
    </table>
    <h2>Add Product</h2>
    <form action="@Url.Action("AddProduct")" method="post">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="Name" required />
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="number" id="price" name="Price" required />
        </div>
        <button type="submit">Add Product</button>
    </form>
</body>
</html>